# -*- mode: gitconfig -*-

[user]
	name = Alex Metzger
	email = asm@asm.io
[github]
	user = ametzger
[gitlab]
	user = ametzger
[credential]
	helper = osxkeychain
[core]
	# editor = mvim -f --nomru -c \"au VimLeave * !open -a iTerm\"
	editor = emacsclient -t -a=\\\"\\\"
	whitespace = trailing-space,space-before-tab,-indent-with-non-tab
	filemode = false
	excludesfile = ~/.gitignore_global
[push]
	default = simple
# [help]
# 	autocorrect = 1
[color]
	ui = auto
[log]
	decorate = true
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	d = diff --ignore-space-at-eol -b -w
	ds = diff --staged --ignore-space-at-eol -b -w
	unstage = reset HEAD --
	s = status -sb
	alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\ => \\2/' | sort
	aliases = !git alias
	assume = update-index --assume-unchanged
	unassume = update-index --no-assume-unchanged
	assumed = !git ls-files -v | grep ^h | cut -c 3-
	up = pull --ff-only --all -p
	recent = for-each-ref --sort=committerdate refs/heads/ --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))'
	mine = !git lg --author=\"Alex Metzger\"
	restore = "!f() { git checkout $(git rev-list -n 1 HEAD -- $1)~1 -- $(git diff --name-status $(git rev-list -n 1 HEAD -- $1)~1 | grep ^D | cut -f 2); }; f"
[pull]
	ff = only
[branch]
	autoSetupMerge = always
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[mergetool]
	keepBackup = false
	keepTemporaries = false
	prompt = false
[diff]
	algorithm = patience
[rebase]
	autoStash = true
[merge]
	tool = p4merge
